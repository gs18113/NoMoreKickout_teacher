<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RoomsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="방 추가 또는 제거"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/border"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추가"
            android:textSize="30sp"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

        <EditText
            android:id="@+id/addbuilding"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:hint="건물명"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/addroom"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="방 번호"
            android:inputType="numberDecimal"/>

        <Button
            android:id="@+id/addconfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추가"
            android:onClick="addConfirm"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/border"
        android:layout_margin="10dp"
        android:padding="10dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제거"
        android:textSize="30sp"
        android:layout_marginBottom="10dp"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:id="@+id/deletebuilding"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:hint="건물명"
                android:layout_height="wrap_content"
                />

            <EditText
                android:id="@+id/deleteroom"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="방 번호"
                android:inputType="numberDecimal"/>

            <Button
                android:id="@+id/deleteconfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제거"
                android:onClick="deleteConfirm"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/getback"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="getBack"
        android:text="돌아가기"
        android:layout_marginVertical="20dp"/>

</LinearLayout>